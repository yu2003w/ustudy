<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="examlogfile">logs/exam.log</Property>
		<Property name="infologfile">logs/info.log</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yy/MM/dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="examlog" fileName="${examlogfile}">
			<PatternLayout
				pattern="%d{yy/MM/dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
		<File name="infolog" fileName="${infologfile}">
			<PatternLayout
				pattern="%d{yy/MM/dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="org.springframework.beans.factory" level="DEBUG" />
		<logger name="org.springframework.transaction" level="DEBUG" />
		<logger name="org.springframework.transaction.interceptor"
			level="DEBUG" />
		<Root level="info">
			<AppenderRef ref="examlog" />
		</Root>
		<Logger name="com.ustudy.exam" level="trace" additivity="false">
			<AppenderRef ref="examlog" />
		</Logger>
		<Logger name="com.ustudy.info" level="info" additivity="false">
			<AppenderRef ref="infolog" />
		</Logger>
	</Loggers>
</Configuration>
