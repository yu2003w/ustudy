<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ustudy.exam.dao.QuesAnswerDivDao">

	<resultMap type="com.ustudy.exam.model.QuesAnswerDiv" id="QuesAnswerDivResult">
        <id property="id" column="id"/>
        <result property="seqname" column="seqname"/>
        <result property="branch" column="branch"/>
        <result property="score" column="score"/>
        <result property="quesanswerid" column="quesanswerid"/>
        <result property="egsId" column="exam_grade_sub_id"/>
    </resultMap>

	<select id="getAllQuesAnswerDivs" parameterType="int" resultMap="QuesAnswerDivResult">
		SELECT * FROM quesanswerdiv where exam_grade_sub_id=#{egsId}
	</select>
	
	<select id="getQuesAnswerDivs" parameterType="int" resultMap="QuesAnswerDivResult">
		SELECT * FROM quesanswerdiv where quesanswerid=#{quesId}
	</select>

	<delete id="deleteQuesAnswerDivs" parameterType="int">
		delete FROM quesanswerdiv where exam_grade_sub_id=#{egsId}
	</delete>

	<insert id="insertQuesAnswerDivs" useGeneratedKeys="true" keyProperty="id" parameterType="java.util.List">
		insert into quesanswerdiv (seqname,branch,score,quesanswerid,exam_grade_sub_id) values  
	    <foreach collection="list" item="item" index="index" separator="," >  
	        (#{item.seqname},#{item.branch},#{item.score},#{item.quesanswerid},#{item.egsId})  
	    </foreach>  
	</insert>

</mapper>